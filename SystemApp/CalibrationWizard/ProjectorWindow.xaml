<Window x:Class="KinectCalibrationWPF.CalibrationWizard.ProjectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projector" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" Background="#FFEFEFEF"
        UseLayoutRounding="True">
	<Canvas x:Name="MarkerCanvas" Background="#FFEFEFEF" SnapsToDevicePixels="True">
		<Image x:Name="Marker0" Width="120" Height="120" RenderTransformOrigin="0.5,0.5"
		       RenderOptions.BitmapScalingMode="NearestNeighbor" SnapsToDevicePixels="True">
			<Image.RenderTransform>
				<ScaleTransform x:Name="Scale0" ScaleX="1" ScaleY="1"/>
			</Image.RenderTransform>
		</Image>
		<Image x:Name="Marker1" Width="120" Height="120" RenderTransformOrigin="0.5,0.5"
		       RenderOptions.BitmapScalingMode="NearestNeighbor" SnapsToDevicePixels="True">
			<Image.RenderTransform>
				<ScaleTransform x:Name="Scale1" ScaleX="1" ScaleY="1"/>
			</Image.RenderTransform>
		</Image>
		<Image x:Name="Marker2" Width="120" Height="120" RenderTransformOrigin="0.5,0.5"
		       RenderOptions.BitmapScalingMode="NearestNeighbor" SnapsToDevicePixels="True">
			<Image.RenderTransform>
				<ScaleTransform x:Name="Scale2" ScaleX="1" ScaleY="1"/>
			</Image.RenderTransform>
		</Image>
		<Image x:Name="Marker3" Width="120" Height="120" RenderTransformOrigin="0.5,0.5"
		       RenderOptions.BitmapScalingMode="NearestNeighbor" SnapsToDevicePixels="True">
			<Image.RenderTransform>
				<ScaleTransform x:Name="Scale3" ScaleX="1" ScaleY="1"/>
			</Image.RenderTransform>
		</Image>
	</Canvas>
</Window>
